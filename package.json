{
  "name": "darkwhisper",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron.cjs",
  "description": "Anonymous encrypted chat with auto-delete messages",
  "author": "Anonymous",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:gh-pages": "cross-env GITHUB_PAGES=true npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "deploy": "npm run build:gh-pages && gh-pages -d dist"
  },
  "build": {
    "appId": "com.darkwhisper.app",
    "productName": "DarkWhisper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json",
      "LICENSE.txt",
      "LICENSE_ES.txt"
    ],
    "extraResources": [
      {
        "from": "LICENSE.txt",
        "to": "LICENSE.txt"
      },
      {
        "from": "LICENSE_ES.txt",
        "to": "LICENSE_ES.txt"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "LICENSE.txt",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": true
    }
  },
  "dependencies": {
    "firebase": "^10.7.1",
    "lucide-react": "^0.555.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^9.0.3"
  }
}
